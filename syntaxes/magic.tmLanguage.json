{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Magic",
  "scopeName": "source.magic",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#builtins" },
    { "include": "#operators" },
    { "include": "#numbers" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.magic",
          "match": "#.*"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.magic",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.magic",
          "match": "\\\\."
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.magic",
          "match": "\\b(Expecto|Cast|Also|Patronum|Repeat|Until|By|Loop|Spell|Finite|OwlPost|Skip|Evanesco)\\b"
        },
        {
          "name": "keyword.operator.logical.magic",
          "match": "\\b(And|Or|Not)\\b"
        },
        {
          "name": "keyword.storage.magic",
          "match": "\\b(Scroll|Reparo)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.magic",
          "match": "\\b(Obliviate|Nox|Lumos|MATH_PI)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.magic",
          "match": "\\b(Revelio|Murmur|PRINT_RET|Accio|AccioNum|Scourgify|CLS|IS_NUM|IS_STR|IS_LIST|IS_FUN|Pack|Unpack|Combine|Measure|MaraudersMap|Numeris|Verbis)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.magic",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.magic",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.magic",
          "match": "\\+|-|\\*|/|\\^"
        },
        {
          "name": "keyword.operator.arrow.magic",
          "match": "->"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.magic",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.magic",
          "match": "[\\(\\)\\[\\],;]"
        }
      ]
    }
  }
}
